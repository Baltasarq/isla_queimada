<?xml version='1.0' encoding='utf-8'?>
<widget id="com.devbaltasarq.islaqueimada" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloCordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        
        <!--
        	ldpi    : 36x36 px
        	mdpi    : 48x48 px
        	hdpi    : 72x72 px
        	xhdpi   : 96x96 px
        	xxhdpi  : 144x144 px
        	xxxhdpi : 192x192 px
    	-->

        <icon density="ldpi" src="res/android/icons/lighthouse-ldpi.png" />
        <icon density="mdpi" src="res/android/icons/lighthouse-mdpi.png" />
        <icon density="hdpi" src="res/android/icons/lighthouse-hdpi.png" />
        <icon density="xhdpi" src="res/android/icons/lighthouse-xhdpi.png" />
        <icon density="xxhdpi" src="res/android/icons/lighthouse-xxhdpi.png" />
        <icon density="xxxhdpi" src="res/android/icons/lighthouse-xxxhdpi.png" />

        <icon src="res/android/icons/lighthouse.png" />
        <screen src="res/android/icons/lighthouse.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
